<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="twitter_hash"
        android:title="@string/pref_title_twitter_hash"
        android:defaultValue="@string/pref_default_display_twitter_hash"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <!-- 通信リフレッシュタイミング -->
    <ListPreference
        android:key="sync_twitter_frequency"
        android:title="@string/pref_title_sync_twitter_frequency"
        android:entries="@array/pref_sync_frequency_twitter_titles"
        android:entryValues="@array/pref_sync_frequency_twitter_values"
        android:defaultValue="600"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <!-- スクロールタイミング -->
    <ListPreference
        android:key="scroll_twitter_frequency"
        android:title="@string/pref_title_scroll_twitter_frequency"
        android:entries="@array/pref_scroll_frequency_twitter_titles"
        android:entryValues="@array/pref_scroll_frequency_twitter_values"
        android:defaultValue="10"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
