<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0099cc"
    android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="432dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/frameShopLogo">
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="136dp"
        android:id="@+id/frameTwitter"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/frameShopLogo">

    </FrameLayout>

    <FrameLayout
        android:layout_width="432dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameBeerInfo"
        android:layout_below="@+id/frameShopLogo">
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/frameAD"
        android:background="#00000000"
        android:layout_below="@+id/frameTwitter"
        android:layout_toRightOf="@+id/frameBeerInfo">

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="android.support.v4.view.ViewPager"
            android:id="@+id/viewPager"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>